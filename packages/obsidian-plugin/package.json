{
	"name": "@obsidian-mcp-tools/obsidian-plugin",
	"version": "1.0.0",
	"description": "Chat with your Obsidian notes in Claude Desktop and other MCP Clients. Requires obsidian-local-rest-api and smart-connections plugins.",
	"keywords": [
		"MCP",
		"Claude",
		"Chat",
		"Notes"
	],
	"license": "MIT",
	"author": "Jack Steam",
	"type": "module",
	"main": "main.js",
	"scripts": {
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"dev": "node esbuild.config.mjs",
		"link": "bun scripts/link.ts",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"release": "run-s build"
	},
	"dependencies": {
		"arktype": "^2.0.0-rc.30",
		"express": "^4.21.2",
		"obsidian-local-rest-api": "^2.5.4",
		"radash": "^12.1.0",
		"rxjs": "^7.8.1",
		"shared": "workspace:*"
	},
	"devDependencies": {
		"@types/node": "^16.11.6",
		"@typescript-eslint/eslint-plugin": "5.29.0",
		"@typescript-eslint/parser": "5.29.0",
		"builtin-modules": "3.3.0",
		"esbuild": "0.17.3",
		"obsidian": "latest",
		"tslib": "2.4.0",
		"typescript": "^5.7.2"
	}
}